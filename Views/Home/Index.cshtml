@model IEnumerable<Game>

@{
    ViewData["Title"] = "Home Page";
}



@if (!Model.Any())
{
    <div class="alert alert-warning mt-6 text-center">
        <h4 class="alert-heading">No Games!</h4>
        <p class="mb-0">No Game Were Added Yet</p>
    </div>

}

else{
   
    
    <div class="row mt-5">

        @foreach (var game in Model)
        {
   
            
            <div class="col-lg-4 col-md-6 mb-4 ">
                
                <div class="card text-white bg-dark mb-3"
                     style="max-width:20rem; border-radius: 15px; box-shadow: 0 0 10px 5px rgba(255, 255, 255, 0.3); z-index: 1;">
                    <div class="card-header" style="background-image: url(@($"{FileSettings.ImagePath}/{game.Cover}")); background-size: cover; background-position: center; height: 380px;">
                        <span class="badge bg-primary fs-3">@game.Category.Name</span>

                    </div>
                    <div class="card-body" style="border: none;">
                    </div>
                    <!-- Footer -->
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                        <div class="text-left">
                            <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id" style="text-decoration:none;">
                                <h5>@game.Name</h5>

                                </a>
                           

                        </div>
                        <div class="text-right">
                            <div class="d-flex gap-2">
                                @foreach (var gamedevice in game.Devices)
                                {
                                    <i class="@gamedevice.Device.Icon fs-4"></i>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
            

        }
     

       


     

    </div>

   
  


}

